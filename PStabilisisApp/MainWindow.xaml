<Window x:Class="PStabilisisApp.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PStabilisisApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="921">
    <Grid>
        <Button Content="GET" HorizontalAlignment="Left" Margin="10,293,0,0" VerticalAlignment="Top" Height="47" Width="102" Click="Button_Click"/>
        <Button Content="PATCH" HorizontalAlignment="Left" Margin="400,293,0,0" VerticalAlignment="Top" Height="47" Width="102" Click="bntPatch_Click"/>
        <Button Content="DELETE" HorizontalAlignment="Left" Margin="600,293,0,0" VerticalAlignment="Top" Height="47" Width="102" Click="btnDelete_Click"/>
        <Button Content="PUT" HorizontalAlignment="Left" Margin="809,293,0,0" VerticalAlignment="Top" Height="47" Width="102" Click="btnAdd_Click"/>
        <TextBox x:Name="Title" Style="{StaticResource placeHolder}" Tag="Title" HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="Location" Style="{StaticResource placeHolder}" Tag="Location" HorizontalAlignment="Left" Margin="10,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Latitude" Style="{StaticResource placeHolder}" Tag="Latitude" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Longitude" Style="{StaticResource placeHolder}" Tag="Longitude" HorizontalAlignment="Left" Margin="10,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Oldtitle" Style="{StaticResource placeHolder}" Tag="Oldtitle" HorizontalAlignment="Left" Margin="10,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Newtitle" Style="{StaticResource placeHolder}" Tag="Newtitle" HorizontalAlignment="Left" Margin="10,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Grid/>
        <DataGrid x:Name="Info" Margin="173,10,152,190"/>
    </Grid>
</Window>